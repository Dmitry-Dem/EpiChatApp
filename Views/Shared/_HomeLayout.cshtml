<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - EpiChatApp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />	
	<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/EpiChatApp.styles.css" asp-append-version="true" /> 
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm box-shadow">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Account" asp-action="SignIn">EpiChatApp</a>

                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">                     
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="chat-menu" id="menu">
        <div class="opn-menu-block" onclick="openMenu()">
            <img src="~/images/icons/opn-menu-icon.png" />
        </div>

        <div class="chat-menu-body">
            <div class="menu-header mb-4">
                <div class="menu-header-chat-title mb-4">
                    <h2>Chats</h2>
                    <a class="add-chat-img" href="#"><img src="~/images/icons/add-chat-icon.png" /></a>
                </div>
                <input class="input" placeholder="Search" />
            </div>

            <div class="menu-content">
                @for (int i = 0; i < 30; i++)
                {
                    <div class="menu-content-chat mb-4">
                        <h5>Chat - @(i + 1)</h5>
                        <p>Me: Some Text</p>
                    </div>
                }
            </div>
        </div>
	</div>
    
    <main role="main" class="main">
        <div class="main-body" id="main-body">
            @RenderBody()
        </div>
    </main>
    

    <hr class="main-footer-hr" />

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
</body>
</html>
