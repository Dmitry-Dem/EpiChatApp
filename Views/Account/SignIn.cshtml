@model EpiChatApp.ViewModels.SignInViewModel

@{
	ViewData["Title"] = "Sign In";
}

<div class="wrapper">
	<div class="wrapper-items">
		<div class="content">
			<div class="title">
			<h1>Sign In</h1>
		</div>

			<form asp-controller="Account" asp-action="SignIn" method="post">
			<div class="Email-block">
				<span asp-validation-for="Email" class="text-danger"></span>
				<input class="input" type="email" placeholder="Email@gmail.com" asp-for="Email"/>
			</div>
			
			<div class="password-block">
				<span asp-validation-for="Password" class="text-danger"></span>
				<input class="input" type="password" placeholder="Password" asp-for="Password" />
			</div>

			<div class="submite-block">
				<button class="button" type="submit">Sign In</button>
			</div>

			<div class="sidn-up-button-block">
				<button class="button green-hover" asp-controller="Account" asp-action="SignUp" formmethod="get">Sign Up</button>
			</div>
		</form>
		</div>
	</div>
</div>